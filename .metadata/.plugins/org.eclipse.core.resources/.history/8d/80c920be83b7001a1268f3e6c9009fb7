						<td>
							<input name="firstName" ng-model="firstName" type="text" size="20" required/>							
						</td>
					</tr>
					<tr>
						<td>Middle Name</td>
						<td>
							<input name="middleName" ng-model="middleName" type="text" size="20" required/>							
						</td>
					</tr>
					<tr>
						<td>Last Name</td>
						<td>
							<input name="lastName" ng-model="lastName" type="text" size="20" required/>							
