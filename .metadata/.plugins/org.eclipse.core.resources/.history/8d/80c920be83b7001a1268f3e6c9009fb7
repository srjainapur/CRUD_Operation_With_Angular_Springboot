	  					<button class="btn btn-primary" ng-model="isEdit" ng-click="editEmployee(employee.empId)">Edit</button>
	  				</td>
	  				<td>
	  					<button class="btn btn-danger" ng-click="removeEmployee(employee.empId)">Remove</button>
	  				</td>
	  			</tr>
	  			<tr>
	  				<td colspan="8">&nbsp;</td>
